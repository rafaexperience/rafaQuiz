<!--FORMULARIO DE PREGUNTA -PARTE DE NEWQUIZ O EDITQUIZ -->
<p>
	<label for="preg" class="rem">Pregunta:</label>
	<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" />
</p>
<p>
	<label for="resp" class="rem">Respuesta:</label>
	<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" />
</p>
<p>
	<label for="tema" class="rem">tema:</label>
	<select name="quiz[tema] required">
		<% for(var t=0;t<temasArray.length;t++){ %>
			<option value="<%= temasArray[t] %>"
				 <% if(temasArray[t]===quiz.tema){ %>
				 	selected <%}%> > <%= temasArray[t] %> </option>
			<% } %>
	</select>
</p>
<p>
	<a href="/quizes"><button class="bot" type="button">Cancelar</button></a>
	<input class="bot" type="submit" value="Salvar">
</p>